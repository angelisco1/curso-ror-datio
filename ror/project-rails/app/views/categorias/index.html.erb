<h2>Listado de categorias</h2>
<%= link_to 'Nueva categoria', new_categoria_path %>
<ul>
  <% @categorias.each do |categoria| %>
    <li>
      <%= categoria.nombre %>
      <%#= link_to :Editar, edit_categoria_path(categoria.id) %>
      <%= link_to :Editar, edit_categoria_path(categoria) %>
      <%= button_to :Eliminar, categoria_path(categoria), {:method => 'delete'} %>
    </li>
  <% end %>
</ul>