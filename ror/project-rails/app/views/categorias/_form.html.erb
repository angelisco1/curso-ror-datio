<%# Le pasamos el model para que sepa a donde tiene que hacer la peticion y que tipo de peticion %>
<%= form_with :model => @categoria do |f| %>
  <div>
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>
  <!--
  <div>
    <%= f.label :otro %>
    <%= f.text_field :otro %>
  </div>
  -->
  <%= f.submit :Guardar %>
  <%= link_to :Volver, categorias_path %>
<% end %>